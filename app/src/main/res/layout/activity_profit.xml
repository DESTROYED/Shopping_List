<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@drawable/toolbar_background"
            android:layout_height="54dp">
            <ImageButton
                android:id="@+id/hamburger"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_menu_24dp"
                android:layout_width="54dp"
                android:layout_height="54dp" />
            <TextView
                android:text="@string/profit"
                android:textColor="@color/cardview_light_background"
                android:id="@+id/inside_shopping_list_text_view_shopping_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"/>
            <ImageButton
                android:layout_gravity="end"
                android:id="@+id/add_item"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_width="54dp"
                android:layout_height="54dp" />
        </FrameLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:id="@+id/recycler_profit"
            app:layout_heightPercent="80%"/>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_below="@+id/recycler_profit"
            android:id="@+id/buttonHolder"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:padding="5dp"
                android:visibility="gone"
                android:background="@drawable/rect_buttons_main"
                android:textColor="@color/cardview_light_background"
                android:layout_width="wrap_content"
                android:id="@+id/button_add_best"
                android:layout_height="wrap_content"
                android:text="@string/add_best"/>
            <Button
                android:id="@+id/button_clean"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/rect_buttons_main"
                android:textColor="@color/cardview_light_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"/>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_main_drawer"/>
    </android.support.v4.widget.DrawerLayout>