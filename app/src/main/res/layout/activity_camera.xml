<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <Button
        app:layout_marginTopPercent="29%"
        app:layout_marginLeftPercent="22%"
        app:layout_widthPercent="56%"
        app:layout_heightPercent="42%"
        android:background="@drawable/rectangle_frame"
        />
    <Button
        android:background="@drawable/round_frame"
        android:id="@+id/btn_takepicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/scan_btn" />
</android.support.percent.PercentRelativeLayout>