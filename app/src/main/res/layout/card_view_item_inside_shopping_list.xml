<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/inside_shopping_list_card_view"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/inside_recycler"
        android:orientation="horizontal">

        <CheckBox
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
            <TextView
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:text="Product"
                android:id="@+id/inside_shopping_list_text_view_product_name_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:gravity="center"
                android:textSize="20sp" />

            <TextView
                android:text="Cost"
                android:id="@+id/inside_shopping_list_text_view_product_cost_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/inside_shopping_list_text_view_total_cost_in_card_view"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/cardview_light_background"
                android:text="Sum"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginTop="38dp"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="38dp"
                android:layout_marginLeft="55dp"
                android:text="Weight"
                android:id="@+id/inside_shopping_list_edit_text_quantity_of_product_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                android:hint="@string/quantity_and_weight"/>

        <ImageButton
            android:id="@+id/inside_shopping_list_image_button_delete_in_card_view"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/icons_background"
            android:contentDescription="@string/delete_shopping_list"
            android:src="@drawable/ic_clear_black_24dp" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>