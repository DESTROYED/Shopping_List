<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inside_shopping_list_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lidchanin.crudindiploma.activities.InsideShoppingListActivity"
    tools:showIn="@layout/activity_inside_shopping_list"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:textColor="@color/cardview_light_background"
        android:id="@+id/inside_shopping_list_text_view_shopping_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:background="@color/cardview_dark_background"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/inside_shopping_list_text_view_products_costs_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:background="@color/cardview_dark_background"
        android:layout_below="@+id/inside_shopping_list_text_view_shopping_list_name">

        <TextView
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/name" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/cost" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/total" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/quantity" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/delete" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/inside_shopping_list_recycler_view_all_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/inside_shopping_list_text_view_products_costs_sum" />

</RelativeLayout>
