<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/managing_existing_products_card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="15dp">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inside_recycler">

            <ImageButton
                android:id="@+id/managing_existing_products_image_button_edit_in_card_view"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icons_background"
                android:contentDescription="@string/edit_shopping_list"
                android:padding="10dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />

            <TextView
                android:id="@+id/managing_existing_products_text_view_product_name_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/managing_existing_products_text_view_product_cost_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="33dp"
                android:text="@string/weight"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/managing_existing_products_text_view_product_popularity_in_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:text="@string/sum"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/managing_existing_products_image_button_delete_in_card_view"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icons_background"
                android:contentDescription="@string/delete_shopping_list"
                android:src="@drawable/ic_clear_black_24dp" />

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>