<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:id="@+id/managing_existing_products_card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <FrameLayout
            android:background="@drawable/inside_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/managing_existing_products_image_button_edit_in_card_view"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icons_background"
                android:contentDescription="@string/edit_shopping_list"
                android:padding="10dp"
                android:src="@drawable/ic_mode_edit_black_24dp"  />

            <TextView
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/managing_existing_products_text_view_product_name_in_card_view"/>

            <TextView
                android:id="@+id/managing_existing_products_text_view_product_cost_in_card_view"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="55dp"
                android:text="Weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/cardview_light_background"/>

            <TextView
                android:id="@+id/managing_existing_products_text_view_product_popularity_in_card_view"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/cardview_light_background"
                android:text="Sum"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginTop="38dp"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/managing_existing_products_image_button_delete_in_card_view"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/icons_background"
                android:contentDescription="@string/delete_shopping_list"
                android:src="@drawable/ic_clear_black_24dp"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>