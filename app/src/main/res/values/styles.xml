    <style name="VirginGradientTheme" parent="Theme.AppCompat.Light">
        <item name="android:panelBackground">@color/pinkBrightSoft</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
        <item name="startGradient">#ea3b3b</item>
        <item name="endGradient">#ea3b3b</item>
        <item name="colorPrimary">?attr/endGradient</item>
        <item name="colorPrimaryDark">?attr/endGradient</item>
        <item name="colorAccent">?attr/endGradient</item>

    </style>

    <style name="LoveAndLibertyGradientTheme" parent="Theme.AppCompat.Light">
        <item name="android:panelBackground">@color/blueDark</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textColorHint">@color/cardview_light_background</item>
        <item name="startGradient">@color/blueDark</item>
        <item name="endGradient">@color/redDark</item>
        <item name="colorPrimary">?attr/endGradient</item>
        <item name="colorPrimaryDark">?attr/endGradient</item>
        <item name="colorAccent">?attr/endGradient</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textColorHint">@color/cardview_dark_background</item>
    </style>

    <style name="MyTextInputLayout">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">?attr/endGradient</item>
        <item name="android:textColorHint">?attr/endGradient</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
