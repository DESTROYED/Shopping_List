<resources>
    <attr name="startGradient" format="reference|color" />
    <attr name="endGradient" format="reference|color" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopUpWindow">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

	<style name="PopupWindow" >
        <item name="android:colorBackground">@color/colorPopupBackground</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="BlueGradientTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="startGradient">@color/blue</item>
        <item name="endGradient">@color/blueLittleDarker</item>
        <item name="colorPrimary">?attr/endGradient</item>
        <item name="colorPrimaryDark">?attr/endGradient</item>
        <item name="colorAccent">?attr/endGradient</item>
    </style>
    <style name="PurpleGradientTheme" parent="Theme.AppCompat.Light">
        <item name="startGradient">@color/blue</item>
        <item name="endGradient">@color/purple</item>
        <item name="colorPrimary">?attr/endGradient</item>
        <item name="colorPrimaryDark">?attr/endGradient</item>
        <item name="colorAccent">?attr/endGradient</item>
    </style>
</resources>
